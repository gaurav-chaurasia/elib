<div class="row" style="margin:3rem;">
    <div class="col-sm-offset-2 col-xs-8">
      <%= form_with(model: book, local: true) do |form| %>

        <%= render 'shared/error_messages', resource: book %>

        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control"%>
        </div>
     
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= form.label :auther %>
          <%= form.text_field :auther, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :isbn %>
          <%= form.number_field :isbn, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= form.label :images %>
          <%= form.file_field :images, multiple: true, class: "form-control"%>
        </div>

        <div class="form-group center"style="margin-top:3rem;">
          <%= form.submit class: "btn btn-primary btn-md"%> 
          <%= link_to 'Show', @book || books_path,class: "btn btn-default btn-md" %>
          <%= link_to 'Back', books_path || books_path, class: "btn btn-default btn-md"%>
        </div>
    <% end %>
  </div>
</div>